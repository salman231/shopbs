<form>
    <group id="information">
        <title>Booking/Reservation form</title>
        <code>reservation</code>
        <status>1</status>
        <customer_group>0</customer_group>
        <store_id>0</store_id>
        <send_notification>0</send_notification>
    </group>
    <group id="content">
        <submit_button>Submit</submit_button>
        <success_message>Thanks for contacting us. Your request was saved successfully.</success_message>
    </group>
    <group id="fields">
        <form_json>
            <field>
                <type>textinput</type>
                <name>first_name</name>
                <label>First Name</label>
                <className>form-control</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>textinput</type>
                <name>last_name</name>
                <label>Last Name</label>
                <className>form-control</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>textinput</type>
                <name>email</name>
                <label>Email</label>
                <className>form-control</className>
                <required>true</required>
                <validation>validate-email</validation>
            </field>
            <field>
                <type>number</type>
                <name>phone</name>
                <label>Phone Number</label>
                <className>form-control</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>date</type>
                <name>date</name>
                <label>Date</label>
                <className>amform-date</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>time</type>
                <name>time</name>
                <label>Time</label>
                <className>amform-time</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>dropdown</type>
                <name>peopleD</name>
                <label>Number of people</label>
                <className>form-control</className>
                <required>true</required>
                <values>
                    <option>
                        <label>1</label>
                        <value>option-1</value>
                        <selected>true</selected>
                    </option>
                    <option>
                        <label>2</label>
                        <value>option-2</value>
                    </option>
                    <option>
                        <label>3</label>
                        <value>option-3</value>
                    </option>
                </values>
                <validation></validation>
            </field>
        </form_json>
    </group>
</form>
