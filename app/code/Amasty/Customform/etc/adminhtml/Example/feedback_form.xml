<form>
    <group id="information">
        <title>Feedback form</title>
        <code>feedback</code>
        <status>1</status>
        <customer_group>0</customer_group>
        <store_id>0</store_id>
        <send_notification>0</send_notification>
    </group>
    <group id="content">
        <submit_button>Submit</submit_button>
        <success_message>Thanks for contacting us. Your request was saved successfully.</success_message>
    </group>
    <group id="fields">
        <form_json>
            <field>
                <type>textinput</type>
                <name>-1</name>
                <label>Name</label>
                <className>form-control</className>
                <required>true</required>
                <validation></validation>
            </field>
            <field>
                <type>textinput</type>
                <name>-2</name>
                <label>Email</label>
                <className>form-control</className>
                <required>true</required>
                <validation>validate-email</validation>
            </field>
            <field>
                <type>textinput</type>
                <name>-3</name>
                <label>Organization</label>
                <className>form-control</className>
                <validation></validation>
            </field>
            <field>
                <type>dropdown</type>
                <name>-4</name>
                <label>What products are you interested in?</label>
                <className>form-control</className>
                <required>true</required>
                <values>
                    <option>
                        <label>Product 1</label>
                        <value>option-1</value>
                        <selected>true</selected>
                    </option>
                    <option>
                        <label>Product 2</label>
                        <value>option-2</value>
                    </option>
                    <option>
                        <label>Product 3</label>
                        <value>option-3</value>
                    </option>
                </values>
                <validation></validation>
            </field>
            <field>
                <type>radio</type>
                <name>-5</name>
                <label>How would you rate our store?</label>
                <className>amform-radio</className>
                <required>true</required>
                <values>
                    <option>
                        <label>R1</label>
                        <value>option-1</value>
                        <selected>true</selected>
                    </option>
                    <option>
                        <label>R2</label>
                        <value>option-2</value>
                    </option>
                    <option>
                        <label>R3</label>
                        <value>option-3</value>
                    </option>
                    <option>
                        <label>R4</label>
                        <value>option-4</value>
                    </option>
                    <option>
                        <label>R5</label>
                        <value>option-5</value>
                    </option>
                </values>
                <validation></validation>
            </field>
            <field>
                <type>radio</type>
                <name>-6</name>
                <label>How would you rate our service?</label>
                <className>amform-radio</className>
                <required>true</required>
                <values>
                    <option>
                        <label>l1</label>
                        <value>option-1</value>
                        <selected>true</selected>
                    </option>
                    <option>
                        <label>l2</label>
                        <value>option-2</value>
                    </option>
                    <option>
                        <label>l3</label>
                        <value>option-3</value>
                    </option>
                    <option>
                        <label>l4</label>
                        <value>option-4</value>
                    </option>
                    <option>
                        <label>l5</label>
                        <value>option-5</value>
                    </option>
                </values>
                <validation></validation>
            </field>
            <field>
                <type>textarea</type>
                <name>-7</name>
                <label>Any other comments?</label>
                <className>form-control</className>
                <validation></validation>
            </field>
        </form_json>
    </group>
</form>
