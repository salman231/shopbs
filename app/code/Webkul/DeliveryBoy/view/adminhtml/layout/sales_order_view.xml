        	</action>
            <action method="addTab">
            	<argument name="name" xsi:type="string">add_new_comment</argument>
            	<argument name="block" xsi:type="string">Webkul\DeliveryBoy\Block\Adminhtml\Order\Tab\AddComment</argument>
        	</action>
        </referenceBlock>
    </body>
</page>