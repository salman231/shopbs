<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="account"/>
        <referenceContainer name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-auction-detail" ifconfig="wk_auction/general_settings/enable">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Gift Card Details</argument>
                    <argument name="path" xsi:type="string">giftcard/giftuser</argument>
                    <argument name="sortOrder" xsi:type="number">3</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
