/** @var \Mageplaza\DailyDeal\Block\Product\View\QtyItems $block */
$productId = $block->getRequest()->getParam('id');

if ($block->_helperData->checkDealProduct($productId)):?>
    <div class="qty-items" data-mage-init='{"qtyUpdate": <?= /* @noEscape */ $block->getQtyData($productId); ?>}'>
        <?php if ($block->isShowQtyRemain()): ?>
            <div class="remaining-qty-items">
                <span class="count-items"></span>
                <span class="items-text"><?= /* @noEscape */ __('item(s) left'); ?></span>
            </div>
        <?php endif; ?>
        <?php if ($block->isShowQtySold()): ?>
            <div class="sold-qty-items">
                <span class="count-items"></span>
                <span class="items-text"><?= /* @noEscape */ __('item(s) sold'); ?></span>
            </div>
        <?php endif; ?>
    </div>
<?php endif; ?>
