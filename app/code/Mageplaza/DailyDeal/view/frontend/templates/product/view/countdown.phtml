            <span class="<?= $style ?>-txt1 countdown-number days-<?= $productId ?>"></span>
            <div class="<?= $style ?>-txt2 countdown-text"><?= __("Days"); ?></div>
        </div>
        <div class="bg-outer <?= $style ?>">
            <span class="<?= $style ?>-txt1 countdown-number hours-<?= $productId ?>"></span>
            <div class="<?= $style ?>-txt2 countdown-text"><?= __("Hours"); ?></div>
        </div>
        <div class="bg-outer <?= $style ?>">
            <span class="<?= $style ?>-txt1 countdown-number minutes-<?= $productId ?>"></span>
            <div class="<?= $style ?>-txt2 countdown-text"><?= __("Minutes"); ?></div>
        </div>
        <div class="bg-outer <?= $style ?>">
            <span class="<?= $style ?>-txt1 countdown-number seconds-<?= $productId ?>"></span>
            <div class="<?= $style ?>-txt2 countdown-text"><?= __("Seconds"); ?></div>
