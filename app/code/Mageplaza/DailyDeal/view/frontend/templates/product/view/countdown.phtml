    $style = $block->getClockStyle();
    $style5 = ($style === \Mageplaza\DailyDeal\Model\Config\Source\ClockStyle::STYLE_5) ? 'bg-style5' : '';
    ?>
    <span class="limit-time-label"><?= __("Limited Time Remaining!"); ?></span>
