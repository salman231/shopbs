/** @var \Mageplaza\DailyDeal\Block\Adminhtml\System\Config\Manually $block */ ?>

<button id="mpdailydeal_run_manually" title="Run Manually" type="button" class="primary" style="width: 94%;">
    <span><?= /** @noEscape */ __('Run Manually') ?></span>
</button>
<div class="mpdailydeal_popup_confirm"></div>

<script>
    require([
        'jquery',
        'Magento_Ui/js/modal/confirm',
        'mage/translate',
    ], function ($, confirm, $t) {
        $('#mpdailydeal_run_manually').on('click', function () {
            confirm({
                content: $t('Are you sure to run manually?'),
                actions: {
                    /** @inheritdoc */
                    confirm: function () {
                        window.location.href = "<?= /** @noEscape */ $block->getUrl('mpdailydeal/create/manually', ['form_key' => $block->getFormKey(), '_current' => true]) ?>";
                    }
                }
            });
        });
    })
</script>
