<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <mpbetterproductreviews>
            <general>
                <enabled>1</enabled>
                <review_remind>1</review_remind>
                <review_summary>1</review_summary>
                <review_status>1</review_status>
            </general>
            <write_review>
                <enabled>1</enabled>
                <customer_group>0,1,2,3</customer_group>
                <notice_message>Sorry, you haven't got the permission to write a review.</notice_message>
                <use_ajax>1</use_ajax>
                <recommend_product>3</recommend_product>
                <upload_images>1</upload_images>
                <upload_limit>5</upload_limit>
                <term_conditions>
                    <enabled>0</enabled>
                    <title>I agree with the {{anchor}}.</title>
                    <anchor_text>Terms and Conditions</anchor_text>
                    <is_checked>1</is_checked>
                </term_conditions>
            </write_review>
            <review_listing>
                <enabled_helpful>1</enabled_helpful>
                <store_owner_answer>1</store_owner_answer>
                <social_share>0</social_share>
                <verified_buyer>1</verified_buyer>
                <show_nickname>1</show_nickname>
                <review_date>1</review_date>
                <items_per_page>10</items_per_page>
                <sorting>
                    <enabled>1</enabled>
                    <type>1,2,3</type>
                    <default_sorting>3</default_sorting>
                    <default_sort_direction>DESC</default_sort_direction>
                </sorting>
            </review_listing>
        </mpbetterproductreviews>
    </default>
</config>
