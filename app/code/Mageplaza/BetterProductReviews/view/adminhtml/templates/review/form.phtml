<script>
    require(['jquery'], function ($) {
        var isReplyElement = $('.field-reply_enabled #reply_enabled'),
            replyContentElement = $('.field-reply_content #reply_content');
        checkDependence(isReplyElement);
        $(isReplyElement).on('change', function () {
            checkDependence(this);
        });

        function checkDependence(selector) {
            if ($(selector).val() === '1') {
                replyContentElement.prop('disabled', false);
            } else {
                replyContentElement.prop('disabled', true);
            }
        }
    });
</script>
